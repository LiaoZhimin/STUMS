                                    Notification ( 0 )
                                </li>
                                <li class="message">
                                    No new notification
                                </li>
                            </ul>
                        </li>

                        <!-- 预警提示信息 -->
                        <li class="dropdown notification-alert">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-exclamation-circle"></i> 3</a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-title-bar">
                                    Notification ( 3 )
                                </li>
                                <li>
                                    <ul class="notification-list">
                                        <li>
                                            <a href="#">
                                                <div class="noti-icon noti-alert">
                                                    <i class="fa fa-exclamation-circle fa-2x"></i>
                                                </div>
                                                <div class="noti-message">1 new registration</div>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <div class="noti-icon noti-success">
                                                    <i class="fa fa-check fa-2x"></i>
                                                </div>
                                                <div class="noti-message">3 new orders</div>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <div class="noti-icon noti-primary">
                                                    <i class="fa fa-comments fa-2x"></i>
                                                </div>
                                                <div class="noti-message">2 customers messages</div>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </li>

                        <!-- 登陆用户的信息 -->
                        <li class="dropdown">
                            @{
                                STUMS.Models.LayoutData ld = STUMS.Models.LayoutData.getUserMsgFromToken(this.Context);
                            }

                            @if (ld.IsLogin)
                            {
                                //用户已登录，显示用户信息

                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@ld.UserName<span class="caret"></span></a>
                                <ul class="dropdown-menu user-info">
                                    <li class="dropdown-title-bar">
                                        <img src="images/profile.jpg" class="profile-img">
                                    </li>
                                    <li>
                                        <div class="navbar-login">
                                            <h4 class="user-name">@ld.UserName</h4>
                                            <p>@ld.Email</p>
                                            <div class="btn-group margin-bottom-2x" role="group">
                                                <button type="button" class="btn btn-default"><i class="fa fa-user"></i> 个人信息</button>
                                                <button type="button" class="btn btn-default"><i class="fa fa-sign-out"></i> 退出登录</button>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            }
                            else
                            {
                                // 用户没有登录，操作登录框 

                                <a href="/" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">点击登录<span class="caret"></span></a>
                                <div class="box">
                                    <form id="login-form">
                                        <div class="control">
                                            <div class="label">账号：</div>
                                            <input type="text" id="UUUU" class="form-control" placeholder="XXXXXX" />
                                        </div>
                                        <div class="control">
                                            <div class="label">密码：</div>
                                            <input type="password" id="PPPP" class="form-control" placeholder="******" />
                                        </div>
                                        <div>
                                            <label id="lbl_login_msg"></label>
                                        </div>
                                        <div class="login-button">
                                            <input type="button" onclick="login()" class="btn btn-orange" value="登录" />
                                            <script>
                                                var isLoginClick = false;
                                                function login() {
                                                    if (!isLoginClick) {
                                                        showMsg("", true, true);
                                                        var dic = {
                                                            'UUUU': $('#UUUU').val(),
                                                            'PPPP': $('#PPPP').val()
                                                        };
                                                        if (!dic.UUUU) {
                                                            showMsg("请输入账号！！！", false, false);
                                                            return;
                                                        }
                                                        if (!dic.PPPP) {
                                                            showMsg("请输入密码！！！", false, false);
                                                            return;
                                                        }
                                                        $.post('/API/Lgn', dic, r=> {
                                                            if (r == "OK") {
                                                                showMsg(r, true, false);
                                                                window.location.reload();
                                                            } else {
                                                                showMsg(r, false, false);
                                                            }
                                                        });

                                                        setTimeout(() => { showMsg("登录超时！", false, false); }, 30 * 1000);
                                                    }
                                                }
                                                function showMsg(msg, b, isClick) {
                                                    isLoginClick = isClick;
                                                    $('#lbl_login_msg').text(msg);
                                                    $('#lbl_login_msg').css("color",(b?"green":"red"));
                                                }
                                            </script>
                                        </div>
                                    </form>
                                </div>
                            }

                        </li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
