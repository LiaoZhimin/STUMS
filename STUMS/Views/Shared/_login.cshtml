
<div class="container">
    <div class="login-box">
        <div class="title"><h3>Sign In</h3></div>
        <div class="progress hidden" id="login-progress">
            <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                Log In...
            </div>
        </div>
        <div class="alert alert-success hidden" id="login-message" role="alert">
            <i class="fa fa-check"></i> Login Success. Please wait for loading.
        </div>
        <div class="box">
            <form id="login-form">
                <div class="control">
                    <div class="label">User Code</div>
                    <input type="text" class="form-control inup" name="UUUU" value="" />
                </div>
                <div class="control">
                    <div class="label">Password</div>
                    <input type="password" class="form-control inup" name="pppp" value="" />
                </div>              
                <div class="login-button">
                    <button type="button" id="login" class="btn btn-orange" value="Login">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>

@RenderPage("~/Views/Shared/_msgbox.cshtml",
    new {
        data =new STUMS.Models.MsgBoxData() {
            BoxType = STUMS.Models.boxType.danger
        }
    })

<script type="text/javascript">
    $(function () {
        $("#login-form").submit(function () {
            $("#login-progress").removeClass("hidden");

            setTimeout(function () {
                $("#login-progress").addClass("hidden");
                $("#login-message").removeClass("hidden");
            }, 1000);
            return false;
        });
        //
        $('#login').click(function () {
            let dic = {
                'UUUU': $('.inup[name=UUUU]').val(),
                'pppp': $('.inup[name=pppp]').val()
            }
